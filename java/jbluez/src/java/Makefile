# Directory of the jbluez binaries; namely where jbluez.jar should be installed.
BIN_DIR         = ../../bin

# Directory where the Javadoc documentation should be installed.
JAVADOC_DIR     = ../../javadoc

# HTML Code to add to bottom of Javadoc pages.
JAVADOC_FOOTER  = "<center>Copyright &copy; 2002 \
	<a href="http://www.appliancestudio.com" target=_new>The Appliance Studio \
	Limited</a></center>"

# Options for the generation of the Javadoc documentation.
JAVADOC_FLAGS   = -author -version -bottom $(JAVADOC_FOOTER)

# Location of source files (and class files, once compiled).
PACKAGE_SRC     = com/appliancestudio/jbluez

############

# Default: make jbluez.jar and Javadoc documentation.
all: jar javadoc

# Remove the class files. These should be regenerated by recompiling the source
# code before creating the JAR file.
clean:
	-rm $(PACKAGE_SRC)/*.class

# Compile the source code into Java classes.
classes:
	(cd $(PACKAGE_SRC) ; javac *.java)

# Create the Java archive of the com.appliancestudio.jbluez package.
jar: clean classes
	jar cvf $(BIN_DIR)/jbluez.jar $(PACKAGE_SRC)/*.class

# Create Javadoc documentation for the com.appliancestudio.jbluez package.
javadoc:
	javadoc -d $(JAVADOC_DIR) $(JAVADOC_FLAGS) $(PACKAGE_SRC)/*.java
